{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Yarp": "Debug",
      "Microsoft.Extensions.Diagnostics.HealthChecks": "Debug"
    }
  },
  "HealthChecks": {
    "Dependencies": [
      { "Name": "api-1", "Url": "http://api-1:8081/health", "TimeoutSeconds": 5 },
      { "Name": "api-2", "Url": "http://api-2:8082/health", "TimeoutSeconds": 5 },
      { "Name": "api-3", "Url": "http://api-3:8083/health", "TimeoutSeconds": 5 }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "api-cluster",
        "Match": { "Path": "/Users/{**remainder}"}
      }
    },
    "Clusters": {
      "api-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "api-1": { "Address": "http://api-1:8081/" },
          "api-2": { "Address": "http://api-2:8082/" },
          "api-3": { "Address": "http://api-3:8083/" }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        }
      }
    }
  }
}
